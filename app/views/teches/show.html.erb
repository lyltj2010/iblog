<%= content_for :title do %>
	<%= @tech.title %>
<% end %>
<div id="tech_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @tech.created_at.strftime('%A, %B %d') %></p>
			<h1><%= @tech.title %></h1>
			<hr>
		</header>

		<div id="content">
			<%= markdown(@tech.content) %>
		</div>
		<% if user_signed_in? %>
			<div id="admin_links">
				<%= link_to "Edit Article", edit_tech_path(@tech) %>
				<%= link_to "Delete Article", tech_path(@tech), method: :delete, data: {confirm: "Are you sure?"} %>
			</div>
		<% end %>
		<hr>
		<div id="share_box">
			<p>Share <%= @tech.title %> With</p>
			<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @tech.title%> by Yongle Lyu -&amp;url=<%= url_for([@tech, {only_path: false}])%>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
			<a href="#"><i class="fa fa-facebook"></i></a>
			<a href="#"><i class="fa fa-google-plus"></i></a>
			<a href="#"><i class="fa fa-weibo"></i></a>
		</div>
		<hr>
		<%= render 'teches/disqus' %>
</div>